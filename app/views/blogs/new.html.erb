<div class = "form-wrapper">
<%= form_for @blogs do |f| %>
  <div class = "form-group row">
    <%= f.label "Title" %>
   	<%= f.text_field :title, :class => 'form-control' %>
	</div>
	 <div class = "form-group row">
  <%= f.label "Content" %>
  <%= f.text_area :content, :class => 'form-control' %>
  </div>
   <div class = "form-group row">
  <%= f.submit :class => 'btn-primary' %>
  <% end %>

  </div>
</div>
